<addon id="plugin.program.xmenu" name=" [B][COLOR white][X]Menu[/COLOR][/B]" version="1.0" provider-name="[B][COLOR red]XcaliBuild[/COLOR][/B]">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[X]Menu Kodi Wizard</summary>
    <description lang="en">[COLOR gray]Essential tools to install the best creation of XcaliBuild, it also allows you to update all your add-ons and for the smooth running of kodi with Advanced settings[/COLOR]</description>
    <platform>all</platform>
  </extension>
</addon>
<addon id="repository.xcalibuild" name="Xcalibuild Repo" version="0.0.5" provider-name="TeamXcalibuild">
	<extension point="xbmc.addon.repository" name="Xcalibuild Repo">
        <info compressed="false">https://raw.githubusercontent.com/TeamXcalibuild/xcalibuild/master/addon.xml</info>
	    <checksum>https://raw.githubusercontent.com/TeamXcalibuild/xcalibuild/master/addons.xml.md5</checksum>
	    <datadir zip="true">https://github.com/TeamXcalibuild/xcalibuild</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">kodi addon</summary>
		<description lang="en">wizard</description>
		<genre>kodi build</genre>
	</extension>
</addon>
